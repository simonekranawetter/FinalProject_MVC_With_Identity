@{
    ViewData["Title"] = @User.FindFirst("DisplayName").Value;
}
@model FinalProject_MVC_With_Identity.Models.ViewModels.RoleViewModel

<div class="bg-blue">
    <div class="container">
        <!--header-->
        <partial name = "_HeaderPartial" />
        <section id="page-title">
            <div class="content">
               <div class="container mt-5">
                   <div id="sign-up">
                        <div class="container mt-5">
                            <h2>Add a new Role</h2>
                            <div class="d-flex justify-content-center">
                                <div class="col-8">
                                    <form asp-action="AddRole">
                                        <div class="row">
                                            <div class="mb-3">
                                                <label asp-for="RoleName" class="form-label"></label>
                                                <input asp-for="RoleName" class="form-control" placeholder="Add a new Role" ></input>
                                            </div>
                                            <div class="d-grid mb-3">
                                                <button type="submit" class="btn btn-primary">Edit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>
        </section>
    </div>
</div>

