@model FinalProject_MVC_With_Identity.Models.Forms.SignInForm


@{
    ViewData["Title"] = "Sign In";
}

<section id="sign-in">
    <h4>Log in</h4>
    <div class="container mt-5">
        <h2>Sign In</h2>
        <div class="d-flex justify-content-center">
            <div class="col-5">
                <div class="md-4">
                    <form asp-action="SignIn" asp-route-url="@Model.ReturnUrl">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your Email">
                            <span asp-validation-for="Email" class="form-text text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Enter your Password">
                            <span asp-validation-for="Password" class="form-text text-danger"></span>
                        </div>
                        <div class="form-text text-center text-danger mb-3">
                            @Model.ErrorMessage
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
                        </div>
                        <div class="d-grid">
                            <a asp-controller="Auth" asp-action="SignUp">Not a member? Sign Up here!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
