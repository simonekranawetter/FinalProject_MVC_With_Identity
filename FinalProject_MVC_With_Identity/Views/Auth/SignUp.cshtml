@model FinalProject_MVC_With_Identity.Models.Forms.SignUpForm

@{
    ViewData["Title"] = "Sign Up";
}
<div id="sign-up">
    <div class="container mt-5">
        <h2>Sign Up</h2>
        <div class="d-flex justify-content-center">
            <div class="col-8">
                <form asp-action="SignUp" asp-route-url="@Model.ReturnUrl">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter your First Name">
                            <span asp-validation-for="FirstName" class="form-text text-danger"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter your Last Name">
                            <span asp-validation-for="LastName" class="form-text text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="StreetName" class="form-label"></label>
                            <input asp-for="StreetName" class="form-control" placeholder="Enter your Street Name">
                            <span for="StreetName" class="form-text text-danger"></span>
                        </div>
                        <div class="col-4 mb-3">
                            <label asp-for="PostalCode" class="form-label"></label>
                            <input asp-for="PostalCode" class="form-control" placeholder="Enter your Postal Code">
                            <span asp-validation-for="PostalCode" class="form-text text-danger"></span>
                        </div>
                        <div class="col-8 mb-3">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" placeholder="Enter your City">
                            <span asp-validation-for="City" class="form-text text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your Email">
                            <span asp-validation-for="Email" class="form-text text-danger"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Enter your Password">
                            <span asp-validation-for="Password" class="form-text text-danger"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your Password">
                            <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
                        </div>
                        <div class="form-text text-center text-danger mb-3">
                            @Model.ErrorMessage
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
                        </div>
                        <div class="d-grid">
                            <a asp-controller="Auth" asp-action="SignIn">Already a member? Sign in here!</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
